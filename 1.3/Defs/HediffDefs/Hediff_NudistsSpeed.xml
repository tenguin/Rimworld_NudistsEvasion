<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>NudistsEvasion_NudistsSpeed</defName>
    <label>nudist's swiftness</label>
    <hediffClass>HediffWithComps</hediffClass>
    <description>Combat movement speed is increased due to having zero encumberance and high physical fitness.</description>
    <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
    <label>wearing pants</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>      
      </li>
      <li>
    <label>full</label>
        <minSeverity>0.5</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>      
      </li>
    </stages>
  </HediffDef>
</Defs>